<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/my_border"
    android:orientation="vertical"
    android:padding="15dp"
    android:nestedScrollingEnabled="false"

    style="@style/AppTheme.PopupOverlay">


    <Button
        android:id="@+id/btn_close_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kapat"
        android:layout_gravity="right" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_cutlery2"
        android:adjustViewBounds="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Food Name"
        android:id="@+id/foodTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0 kcal"
        android:id="@+id/foodCalorieTextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />


    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#135f5e5e">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/karbonhidrat"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/protein"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textStyle="bold"
                android:layout_marginLeft="35dp"></TextView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/yag"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="20dp"
                android:textStyle="bold"></TextView>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/dim_foreground_material_dark"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/foodKarbonhidratTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0 gr"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textColor="#FFF"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/foodProteinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0 gr"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_marginLeft="35dp"
                android:textColor="#FFF"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/foodFatTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="0 gr"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="center"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="20dp"
                android:textColor="#FFF"
                android:textStyle="bold"></TextView>

        </TableRow>

    </TableLayout>


    <!--
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:entries="@array/portionOrGram"
            android:prompt="@string/pg_prompt"
            android:spinnerMode="dialog"
            android:layout_marginTop="20dp" />
    -->
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spinnerMode="dialog"/>


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Ekle"
            android:layout_gravity="center_horizontal"
            android:background="#2ecc71"
            android:textColor="@color/abc_primary_text_disable_only_material_dark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            style="@style/AppTheme" />



    </LinearLayout>


